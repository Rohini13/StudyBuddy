<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css' />
    <title>main</title>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        setTimeout(function() {
            $("#messages").fadeOut().empty();
        }, 1000);
    </script>
    <style>
        body {
            background-color: #a4a5a7;
            background: linear-gradient(180deg, #76777a 0%, #39393c 37%, #000108 100%) fixed;
        }
        .post{
            opacity:70%;
            height: 100%;
        }
    </style>

</head>
<body>
<nav class="navbar navbar-expand-md navbar-dark bg-transparent">
    <a class="navbar-brand" href="/">StudyBuddy</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Semester</a>
                <div class="dropdown-menu" aria-labelledby="dropdown01">
                    <a class="dropdown-item" href="/main/1">Semester 1</a>
                    <a class="dropdown-item" href="/main/2">Semester 2</a>
                    <a class="dropdown-item" href="/main/3">Semester 3</a>
                    <a class="dropdown-item" href="/main/4">Semester 4</a>
                    <a class="dropdown-item" href="/main/5">Semester 5</a>
                    <a class="dropdown-item" href="/main/6">Semester 6</a>
                    <a class="dropdown-item" href="/main/7">Semester 7</a>
                    <a class="dropdown-item" href="/main/8">Semester 8</a>
                </div>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Courses</a>
                <div class="dropdown-menu" aria-labelledby="dropdown01">
                    <% course.forEach(function(item){%>
                    <a class="dropdown-item" href="/main/course/<%= item.course_id%>/view"><%= item.course_name%></a>
                    <%});%>
                </div>
            </li>
        </ul>
        <ul class="navbar-nav rounded-right">
            <form method="post" class="form-inline mt-2 mt-md-0" action="/main/course/<%= current_course%>/view">
                <input id="searchBy" name="searchBy" class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
            <li class="nav-item">
                <a class="nav-link" href="/main/profile">My Profile<span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/main">Back<span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/logout">Logout<span class="sr-only">(current)</span></a>
            </li>
        </ul>
    </div>
</nav>
<%- messages('message', locals) %>
<br>
<div class="container">
        <h1 align="center" style="color: white"> Course: <%= current_course%></h1><br>
        <% if(post!=undefined){post.forEach(function(item){ %>
        <div class="post" align="center">
            <li class="list-group-item bg-dark post">
                <p style="color: white">
                    <%= item.content%><br>
                    Written by: <%= item.author%><br>
                    Likes:  <%= item.no_of_likes%>  Dislikes: <%= item.no_of_dislikes%>
                </p>
            </li>
        </div>
        <br>
        <%});}%>
     <br>
    <a href="/main/course/<%= current_course%>/create"><button type="button" class="btn btn-outline-primary btn-rounded waves-effect">Create Post</button></a>
</div>
<script src='/bower_components/jquery/dist/jquery.js'></script>
<script src='/bower_components/bootstrap/dist/js/bootstrap.js'></script>
</body>
</html>