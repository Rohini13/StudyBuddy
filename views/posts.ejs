<%- messages('message', locals) %>
<br>
<div class="container">
        <h1 align="center" style="color: white"> Course: <%= current_course%></h1><br>
        <% if(post!=undefined){post.forEach(function(item){ %>
        <div class="post" align="center" style="color: white">
            <li class="list-group-item bg-dark post">
                <p style="color: white" align="left">
                    <%= item.content%><br>
                    Written by: <%= item.author%> <a href="/main/<%= item.authorid%>/viewAuthor">
                        @<%= item.authorid%>
                    </a><br><br><br>
                </p>
                <p>Attached files:</p>
                <ul>
                    <% item.fileField.forEach(function (file) {%>
                    <%if(file!==null){%>
                        <%files.forEach(function (file2) {%>
                            <%if(file._id!==undefined && file._id.toString()===file2._id.toString()){%>
                                <%if(file2.contentType=='image/png'){%>
                                    <li><img width="200px" height="200px" src="\main\image\<%=file2.filename%>" alt="image"></li><br>
                                <%}else{%>
                                    <li><%=file2.filename%></li>
                                <%}%>
                            <%}%>

                    <%})%>
                    <%}%>
                    <%})%>
                </ul>
                <a href="/main/<%= item._id%>/like"><button type="button" class="btn btn-primary btn-circle btn-group-sm">
                        <% if(user.posts_liked.indexOf(item._id)!==-1){%>
                            <i class="fa fa-thumbs-up"></i>
                                <%}else{%>
                                <i class="fa fa-thumbs-o-up"></i>
                                <%}%>
                    </button></a>&nbsp<%= item.no_of_likes%>&nbsp &nbsp &nbsp
                <a href="/main/<%= item._id%>/dislike"><button type="button" class="btn btn-primary btn-circle btn-group-sm">
                        <% if(user.posts_disliked.indexOf(item._id)===-1){%>
                        <i class="fa fa-thumbs-o-down"></i>
                            <%}else{%>
                                <i class="fa fa-thumbs-down"></i>
                            <%}%>
                    </button></a>&nbsp<%= item.no_of_dislikes%>&nbsp &nbsp &nbsp
                <a href="/main/<%= item._id%>/comments"><button type="button" class="btn btn-primary btn-circle btn-group-sm">
                        <i class="fa fa-comment"></i></button></a>&nbsp<%= item.no_of_comments%>&nbsp &nbsp &nbsp
                <a href="/main/<%= item._id%>/bookmark"><button type="button" class="btn btn-primary btn-circle btn-group-sm">
                        <% if(user.posts_bookmarked.indexOf(item._id)===-1){%>
                            <i class="fa fa-star-o"></i>
                        <%}else{%>
                            <i class="fa fa-star"></i>
                        <%}%>
                    </button></a>
            </li>
        </div>
        <br>
        <%});}%>
     <br>
    <button type="button" onclick="myFunction()" class="btn btn-primary btn-group-sm waves-effect fixed_button2"><i class="fa fa-pencil" style="font-size:25px"></i></button></a>

    <div class="container" id="hide">
        <form method="post" action="/main/course/<%= current_course%>/create" enctype="multipart/form-data">
            <div class="form-group">
                <textarea type="text" class="form-control" id="content" name="content" placeholder="Write a Post!" ></textarea>
            </div>
            <div class="form-group">
                <textarea type="text" class="form-control" id="tags" name="tags" placeholder="Enter tags separated by comma." ></textarea>
            </div>
            <div style="color: white">
                <input type="file" name="files" multiple />
            </div>
            <button type="submit" class="btn btn-primary fixed_button1"><i class="fa fa-paper-plane"></i></button>
        </form>
    </div>
    <script>
    function myFunction() {
    var x = document.getElementById("hide");
    if (x.style.display === "none") {
    x.style.display = "block";
    } else {
    x.style.display = "none";
    }

    }
    </script>
</div>
