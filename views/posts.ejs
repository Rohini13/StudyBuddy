    <style>
        body {
            background-color: #a4a5a7;
            background: linear-gradient(180deg, #76777a 0%, #39393c 37%, #000108 100%) fixed;
        }
        .post{
            opacity:90%;
            height: 100%;
        }
        .btn-circle{
            width: 40px;
            height: 40px;
            border-radius: 20px ;
        }
        .fixed_button{
            position: fixed;
            bottom: 5px;
            right: 10px;
            width: 50px;
            height: 50px;
            border-radius: 25px ;
            z-index: 99;
            -webkit-transform: translate3d(0,0,0);
            -webkit-transition: all .25s ease;
            -moz-transition: all .25s ease;
            -ms-transition: all .25s ease;
            -o-transition: all .25s ease;
            transition: all .25s ease;
            text-align: center;
        }
        .fixed_button1{
            position: fixed;
            bottom: 15px;
            right: 80px;
            width: 50px;
            height: 50px;
            border-radius: 25px ;
            z-index: 99;
            -webkit-transform: translate3d(0,0,0);
            -webkit-transition: all .25s ease;
            -moz-transition: all .25s ease;
            -ms-transition: all .25s ease;
            -o-transition: all .25s ease;
            transition: all .25s ease;
            text-align: center;
        }
        .fixed_button2{
            position: fixed;
            bottom: 15px;
            right: 20px;
            width: 50px;
            height: 50px;
            border-radius: 25px ;
            z-index: 99;
            -webkit-transform: translate3d(0,0,0);
            -webkit-transition: all .25s ease;
            -moz-transition: all .25s ease;
            -ms-transition: all .25s ease;
            -o-transition: all .25s ease;
            transition: all .25s ease;
            text-align: center;
        }
        #hide{
            display: none;
            position:fixed;
            bottom: 8px;
            right: 20px;
            width: 500px;
            height: 200px;
            opacity: 70%;
        }
    </style>
    <script>
        function myFunction(x) {
            x.classList.toggle("fa-thumbs-down");
        }
    </script>

</head>
