<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css' />
    <title>main</title>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        setTimeout(function() {
            $("#messages").fadeOut().empty();
        }, 1000);
    </script>
    <style>
        body {
            background-color: #a4a5a7;
            background: linear-gradient(180deg, #76777a 0%, #39393c 37%, #000108 100%) fixed;
        }
        .post{
            opacity:90%;
            height: 100%;
        }
    </style>

</head>
<body>
<nav class="navbar navbar-expand-md navbar-dark bg-transparent">
    <a class="navbar-brand" href="/">StudyBuddy</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="/main">Home<span class="sr-only">(current)</span></a>
            </li>
        </ul>
        <ul class="navbar-nav rounded-right">
            <% if(viewer=='me'){%>
            <li class="nav-item">
                <a class="nav-link" href="/main/profile">My Profile<span class="sr-only">(current)</span></a>
            </li>
                <%}%>
                <% if(viewer=='other'){%>
                    <li class="nav-item">
                        <a class="nav-link" href="/main/<%= user.username%>/viewAuthor">Go back to Profile<span class="sr-only">(current)</span></a>
                    </li>
                <%}%>

            <li class="nav-item">
                <a class="nav-link" href="/logout">Logout<span class="sr-only">(current)</span></a>
            </li>
        </ul>
    </div>
</nav>
<%- messages('message', locals) %>
<br>
<div class="container">
    <h1 align="center" style="color: white"><%= title%></h1><br>
    <% if(post!=undefined){post.forEach(function(item){ %>
        <div class="post" align="center">
            <li class="list-group-item bg-dark post">
                <p style="color: white" align="left">
                    <%= item.content%><br>
                    Written by: <%= item.author%> <a href="/main/<%= item.authorid%>/viewAuthor">@<%= item.authorid%></a><br>
                    Likes:  <%= item.no_of_likes%>  Dislikes: <%= item.no_of_dislikes%>
                </p>
                <% if(viewer=='me'){%>
                <% if(title=='My Posts'){%>
                <a href="/main/profile/myposts/<%= item._id%>/edit"><button type="button" class="btn btn-success btn-circle btn-group-sm">Edit</button></a>
                <a href="/main/profile/myposts/<%= item._id%>/delete"><button type="button" class="btn btn-danger btn-circle btn-group-sm">Delete</button></a>
                <%}%>
                <% if(title=='Favourite Posts'){%>
                    <a href="/main/profile/bookmarks/<%= item._id%>/delete"><button type="button" class="btn btn-danger btn-circle btn-group-sm">Delete</button></a>
                <%}%>
                <%}%>
            </li>
        </div>
        <br>
    <%});}%>
</div>
<script src='/bower_components/jquery/dist/jquery.js'></script>
<script src='/bower_components/bootstrap/dist/js/bootstrap.js'></script>
</body>
</html>