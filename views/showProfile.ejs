<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css' />
    <link rel="stylesheet" type="text/css" href="/stylesheets/style2.css">
    <title>main</title>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        setTimeout(function() {
            $("#messages").fadeOut().empty();
        }, 1000);
    </script>
    <style>
        body {
            background-color: #a4a5a7;
            background: linear-gradient(180deg, #76777a 0%, #39393c 37%, #000108 100%) fixed;
        }
        .post{
            opacity:70%;
            height: 100%;
        }
    </style>

</head>
<body>
<nav class="navbar navbar-expand-md navbar-dark bg-transparent">
    <a class="navbar-brand" href="/">StudyBuddy</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto">

        </ul>
        <ul class="navbar-nav rounded-right">
            <li class="nav-item">
                <a class="nav-link" href="/main">Back<span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/logout">Logout<span class="sr-only">(current)</span></a>
            </li>
        </ul>
    </div>
</nav>
<h1 align="center" style="color: white">Profile Details</h1>
<%- messages('message', locals) %>
<div class="login">
    <form method="post" action="/main/editProfile">
        <label style="color:white">
            UserName
        </label>
        <input type="text" name="username" placeholder="<%= user.username%>"/>
        <label style="color:white">
            Name
        </label>
        <input type="text" name="name" placeholder="<%= user.name%>"/>
        <label style="color:white">
            Email
        </label>
        <input type="text" name="email" placeholder="<%= user.email%>"/>
        <label style="color:white">
            Password
        </label>
        <input type="password" name="password" placeholder="********"/><br>
        <button type="submit" class="btn btn-primary btn-block btn-large">Save Changes</button>
    </form>
</div>
<script src='/bower_components/jquery/dist/jquery.js'></script>
<script src='/bower_components/bootstrap/dist/js/bootstrap.js'></script>
</body>
</html>