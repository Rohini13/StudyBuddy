<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css' />
    <title>Edit Post</title>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        setTimeout(function() {
            $("#messages").fadeOut().empty();
        }, 1000);
    </script>
    <style>
        body {
            background-color: #a4a5a7;
            background: linear-gradient(180deg, #76777a 0%, #39393c 37%, #000108 100%) fixed;
        }

        </style>
</head>
<body>
<nav class="navbar navbar-expand-md navbar-dark bg-transparent">
    <a class="navbar-brand" href="/">StudBuddy</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="/main">Home<span class="sr-only">(current)</span></a>
            </li>
        </ul>
        <ul class="navbar-nav rounded-right">
<!--            <li class="nav-item">-->
<!--                <a class="nav-link" href="/main/profile">My Profile<span class="sr-only">(current)</span></a>-->
<!--            </li>-->
                        <li class="nav-item">
                            <a class="nav-link" href="/main/profile/myposts">Back<span class="sr-only">(current)</span></a>
                        </li>
            <li class="nav-item">
                <a class="nav-link" href="/logout">Logout<span class="sr-only">(current)</span></a>
            </li>
        </ul>
    </div>
</nav>
<%- messages('message', locals) %>
<br>
<h1 align="center" style="color: white"><%= title%></h1>
<br>
<div class="container" style="color: white">
    <form method="post" action="/main/profile/myposts/<%= post._id%>/edit">
        <div class="form-group">
            <label for="tags"><h6>Tags</h6></label>
            <textarea type="text" class="form-control" id="tags" name="tags" ><%= post.tag%></textarea>
        </div>
        <br>
        <div class="form-group">
            <label for="content"><h6>Content</h6></label>
            <textarea type="text" class="form-control" id="content" name="content"><%= post.content%></textarea>
        </div><br>
        <div align="center">
            <button type="submit" class="btn btn-success">Save Changes</button>
        </div>

    </form>
</div>
<script src='/bower_components/jquery/dist/jquery.js'></script>
<script src='/bower_components/bootstrap/dist/js/bootstrap.js'></script>
</body>
</html>